.container .swiper {
  width: 100%;
  height: 400rpx;
}
.container .swiper .swiper-image {
  width: 100%;
  height: 100%;
}
.container .content .header {
  padding-left: 20rpx;
}
.container .content .header .header-title {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  height: 60rpx;
  margin-top: 40rpx;
}
.container .content .header .header-title .header-title-avatar {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
}
.container .content .header .header-title .header-title-content {
  margin-left: 40rpx;
  color: #666;
  font-size: 28rpx;
  height: 60rpx;
  line-height: 60rpx;
}
.container .content .header .header-content {
  margin-top: 30rpx;
  color: #333;
  font-size: 32rpx;
  font-weight: bold;
}
.container .content .body {
  margin-top: 30rpx;
  width: 100%;
  height: 400rpx;
}
.container .content .content-footer {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  height: 82rpx;
  margin-top: 30rpx;
}
.container .content .content-footer .content-footer-one,
.container .content .content-footer .content-footer-two {
  height: 40rpx;
  line-height: 40rpx;
}
.container .content .content-footer .content-footer-one .content-footer-one-image,
.container .content .content-footer .content-footer-two .content-footer-one-image,
.container .content .content-footer .content-footer-one .content-footer-two-image,
.container .content .content-footer .content-footer-two .content-footer-two-image {
  margin-left: 20rpx;
  width: 30rpx;
  height: 30rpx;
  vertical-align: middle;
}
.container .content .content-footer .content-footer-one .content-footer-one-num,
.container .content .content-footer .content-footer-two .content-footer-one-num,
.container .content .content-footer .content-footer-one .content-footer-two-num,
.container .content .content-footer .content-footer-two .content-footer-two-num {
  margin-left: 20rpx;
  font-size: 28rpx;
  color: #797979;
}
.container .content .content-footer .content-border-bottom {
  margin-top: 20rpx;
  width: 100%;
  height: 40rpx;
  background: #f8f8f8;
  border-bottom: 1rpx solid #ededed;
  border-top: 1rpx solid #ededed;
}
