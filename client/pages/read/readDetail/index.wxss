.container .pic {
  width: 100%;
  height: 400rpx;
  position: relative;
}
.container .pic .img {
  width: 100%;
  height: 100%;
}
.container .pic .music {
  position: absolute;
  top: 50%;
  left: 50%;
  width: 100rpx;
  height: 100rpx;
  margin-left: -50rpx;
  margin-top: -50rpx;
  z-index: 10;
}
.container .pic .music .music-stop,
.container .pic .music .music-start {
  width: 100rpx;
  height: 100rpx;
}
.container .content {
  margin-top: 20rpx;
  padding-left: 20rpx;
  padding-right: 20rpx;
}
.container .content .content-header .content-header-title {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  height: 60rpx;
  line-height: 60rpx;
}
.container .content .content-header .content-header-title .content-header-title-img {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
}
.container .content .content-header .content-header-title .content-header-title-name {
  color: #666;
  font-size: 28rpx;
  margin-left: 25rpx;
}
.container .content .content-header .content-header-title .content-header-title-text {
  margin-left: 20rpx;
  color: #9b9b9b;
  font-size: 24rpx;
}
.container .content .content-header .content-header-title .content-header-title-day {
  margin-left: 30rpx;
  font-size: 24rpx;
  color: #9b9b9b;
}
.container .content .content-header .content-header-body .content-header-body-title {
  margin-top: 40rpx;
  font-size: 36rpx;
  color: #4b556c;
  font-weight: bold;
}
.container .content .content-header .content-header-body .content-header-body-border {
  position: relative;
  margin-top: 75rpx;
  width: 100%;
  height: 1rpx;
  background: #e5e5e5;
}
.container .content .content-header .content-header-body .content-header-body-border .content-header-body-border-image-one {
  position: absolute;
  right: 140rpx;
  top: -45rpx;
  width: 90rpx;
  height: 90rpx;
  display: inline-block;
}
.container .content .content-header .content-header-body .content-header-body-border .content-header-body-border-image-two {
  position: absolute;
  right: 20rpx;
  top: -45rpx;
  width: 90rpx;
  height: 90rpx;
  display: inline-block;
}
.container .content .content-body {
  margin-top: 30rpx;
}
.container .content .content-body .content-body-header .content-body-header-title {
  color: #a9a9a9;
  font-size: 28rpx;
}
.container .content .content-body .content-body-content {
  margin-top: 30rpx;
  color: #a9a9a9;
  font-size: 28rpx;
  line-height: 40rpx;
}
